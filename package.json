{
  "name": "yah-map-creator",
  "version": "1.1.0",
  "description": "Creates World Map of You are Hope Game.",
  "main": "web/index.js",
  "scripts": {
    "start": "tsc && chcp 65001 && electron ./dist/app.js",
    "build": "",
    "build-full": "tsc && electron-builder --win"
  },
  "author": "aya-0p",
  "license": "Apache License 2.0",
  "dependencies": {
    "@discordjs/collection": "^1.0.1",
    "fs-extra": "^10.1.0",
    "sharp": "^0.30.7"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "@types/sharp": "^0.30.4",
    "electron": "^20.0.0",
    "electron-builder": "^23.3.3",
    "express": "^4.18.1"
  },
  "build": {
    "appId": "com.aya.mapCreator",
    "productName": "You are Hope Map Creator",
    "directories": {
      "output": "output"
    },
    "files": [
      "res/**/*",
      "settings/**/*",
      "src/**/*",
      "index.js",
      "dist/**/*"
    ],
    "win": {
      "icon": "res/icon.png",
      "target": [
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  }
}
